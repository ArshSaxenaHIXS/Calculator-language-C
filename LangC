#include <stdio.h>


int x;
int y;
int z;











int main()
{
    printf("Enter Num 1 ");
    scanf("%d",&x);
    printf("Enter Num 2 ");
    scanf("%d",&y);
    printf("1 is for addition, 2 is for subtraction, 3 is for multiplication and 4 is for division ");
    scanf("%d",&z);
    
    if(z == 1){
        printf("%d + %d = %d \n",x,y,x+y);
    }
    if(z == 2){
        printf("%d - %d = %d \n",x,y,x-y);
    }
    if(z == 3){
        printf("%d x %d = %d \n",x,y,x*y);
    }
    if(z == 4){
        printf("%d รท %d = %d \n",x,y,x/y);
    }
    
    }
    return 0;
}
